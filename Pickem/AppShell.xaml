<?xml version="1.0" encoding="utf-8" ?>
<Shell x:Class="Pickem.AppShell" 
       xmlns="http://schemas.microsoft.com/dotnet/2021/maui" 
       xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
       xmlns:pages="clr-namespace:Pickem.Pages" 
       Shell.FlyoutBehavior="Flyout">

  <FlyoutItem Title="Wagers" Route="wagers">
    <ShellContent Title="Wagers" ContentTemplate="{DataTemplate pages:WagersPage}" />
  </FlyoutItem>
  
  <FlyoutItem Title="Schedule" Route="schedule">
    <ShellContent Title="Pool" ContentTemplate="{DataTemplate pages:SchedulePage}" />
  </FlyoutItem>

  <FlyoutItem Title="Status" Route="status">
    <ShellContent Title="Status" ContentTemplate="{DataTemplate pages:StatusPage}" />
  </FlyoutItem>

  <FlyoutItem Title="Standings" Route="standings">
    <ShellContent Title="Standings" ContentTemplate="{DataTemplate pages:StandingsPage}" />
  </FlyoutItem>

  <FlyoutItem Title="Record" Route="record">
    <ShellContent Title="Record" ContentTemplate="{DataTemplate pages:RecordPage}" />
  </FlyoutItem>

</Shell>
